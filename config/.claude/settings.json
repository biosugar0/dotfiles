{
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "1200000",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "ENABLE_BACKGROUND_TASKS": "1",
    "SHELL": "/bin/zsh",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "32000",
    "MAX_THINKING_TOKENS": "10000"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "mcp__playwright",
      "mcp__context7",
      "List(*)",
      "Edit(*)",
      "Read(~/ghq/**)",
      "Write(~/ghq/**)",
      "Edit(~/ghq/**)",
      "Read(~/.claude/**)",
      "Read(~/.config/**)",
      "Bash(git:*)",
      "Bash(diff:*)",
      "Bash(npm run:*)",
      "Bash(yarn:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(tsc)",
      "Bash(tsx:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)",
      "Bash(python3:*)",
      "Bash(uv:*)",
      "Bash(poetry:*)",
      "Bash(pytest:*)",
      "Bash(cd *)",
      "Bash(ls:*)",
      "Bash(fd:*)",
      "Bash(cat:*)",
      "Bash(rg:*)",
      "Bash(say:*)",
      "Bash(grep:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(sudo rm:*)",
      "Bash(dd:*)",
      "Bash(sudo dd:*)",
      "Bash(mkfs:*)",
      "Bash(sudo mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(sudo fdisk:*)",
      "Bash(> /dev/*)",
      "Bash(>> /dev/*)",
      "Bash(docker system prune -af)",
      "Bash(chmod 777 /*)",
      "Bash(chown root:*)",
      "Bash(sudo chmod 777:*)",
      "Bash(sudo chown:*)",
      "Bash(sudo -i:*)",
      "Bash(sudo su:*)",
      "Bash(sudo mount:*)",
      "Bash(sudo umount:*)",
      "Bash(sudo:*passwd*)",
      "Bash(sudo:*shadow*)",
      "Bash(rm -rf .git)",
      "Bash(git push --force-with-lease origin main)",
      "Bash(git push -f origin main)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(npm publish:*)",
      "Bash(deno publish:*)",
      "Bash(curl * | sh)",
      "Bash(curl * | bash)",
      "Bash(curl * | zsh)",
      "Bash(wget * | sh)",
      "Bash(wget * | bash)",
      "Bash(wget * | zsh)",
      "Edit(/etc/**)",
      "Edit(/usr/**)",
      "Edit(/var/**)",
      "Edit(/opt/**)",
      "Edit(/bin/**)",
      "Edit(/sbin/**)",
      "Edit(/dev/**)",
      "Edit(/etc/passwd)",
      "Edit(/etc/sudoers)",
      "Write(/etc/**)",
      "Write(/usr/**)",
      "Write(/var/**)",
      "Write(/opt/**)",
      "Write(/bin/**)",
      "Write(/sbin/**)",
      "Write(/dev/**)",
      "Write(/etc/passwd)",
      "Write(/etc/sudoers)",
      "Edit(~/.ssh/id_*)",
      "Edit(~/.ssh/*_rsa)",
      "Edit(~/.ssh/*_ecdsa)",
      "Edit(~/.ssh/*_ed25519)",
      "Write(~/.ssh/id_*)",
      "Write(~/.ssh/*_rsa)",
      "Write(~/.ssh/*_ecdsa)",
      "Write(~/.ssh/*_ed25519)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Write(~/.zshrc)",
      "Write(~/.zprofile)",
      "Read(.env*)",
      "Read(.env.*)",
      "Read(.dev.vars)",
      "Read(.dev.vars.*)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(.env*)",
      "Write(**/secrets/**)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Submarine.aiff"
          }
        ]
      }
    ]
  },
  "timeout": 300,
  "telemetry": false
}
