{{- $privateRepo := dig "private_marketplace" "repo" "" . -}}
{{- $privateName := dig "private_marketplace" "name" "" . -}}
{{- $privatePlugins := dig "private_marketplace" "plugins" (list) . -}}
{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "outputStyle": "default",
  "env": {
    "ENABLE_TOOL_SEARCH": "auto",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "MCP_TOOL_TIMEOUT": "1200000",
    "MCP_TIMEOUT": "3600000",
    "MAX_MCP_OUTPUT_TOKENS": "50000",
    "BASH_MAX_TIMEOUT_MS": "1200000",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1",
    "API_TIMEOUT_MS": "1200000",
    "DISABLE_COST_WARNINGS": "0",
    "ENABLE_BACKGROUND_TASKS": "true",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "RUST_LOG": "warn",
    "CLAUDE_CODE_SHELL": "/bin/zsh",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "53000",
    "ENABLE_LSP_TOOL": "1",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "0"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "mcp__gpt-5",
      "Bash(playwright-cli *)",
      "Bash(obsidian *)",
      "mcp__context7",
      "Bash(macos-notify-cli *)",
      "List(*)",
      "Edit(*)",
      "MultiEdit(*)",
      "Glob(*)",
      "WebFetch",
      "WebSearch",
      "Read(~/ghq/**)",
      "Write(~/ghq/**)",
      "Edit(~/ghq/**)",
      "Read(~/.claude/**)",
      "Read(~/.config/**)",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(bun *)",
      "Bash(tsx *)",
      "Bash(tsc *)",
      "Bash(eslint *)",
      "Bash(prettier *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(uv *)",
      "Bash(poetry *)",
      "Bash(pytest *)",
      "Bash(ruff *)",
      "Bash(go *)",
      "Bash(cargo *)",
      "Bash(make *)",
      "Bash(gh *)",
      "Bash(chezmoi *)",
      "Bash(pup *)",
      "Bash(ls *)",
      "Bash(fd *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(jq *)",
      "Bash(yq *)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(rm *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(chmod *)",
      "Bash(which *)",
      "Bash(pwd)",
      "Bash(echo *)",
      "Bash(say *)",
      "Bash(open *)",
      "Bash(pbcopy)",
      "Bash(pbpaste)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(sudo rm:*)",
      "Bash(dd:*)",
      "Bash(sudo dd:*)",
      "Bash(mkfs:*)",
      "Bash(sudo mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(sudo fdisk:*)",
      "Bash(> /dev/*)",
      "Bash(>> /dev/*)",
      "Bash(docker system prune -af)",
      "Bash(chmod 777 /*)",
      "Bash(chown root:*)",
      "Bash(sudo chmod 777:*)",
      "Bash(sudo chown:*)",
      "Bash(sudo -i:*)",
      "Bash(sudo su:*)",
      "Bash(sudo mount:*)",
      "Bash(sudo umount:*)",
      "Bash(sudo passwd:*)",
      "Bash(rm -rf .git)",
      "Bash(git push --force-with-lease origin main)",
      "Bash(git push -f origin main)",
      "Bash(npm publish:*)",
      "Bash(deno publish:*)",
      "Edit(/etc/**)",
      "Edit(/usr/**)",
      "Edit(/var/**)",
      "Edit(/opt/**)",
      "Edit(/bin/**)",
      "Edit(/sbin/**)",
      "Edit(/dev/**)",
      "Edit(/etc/passwd)",
      "Edit(/etc/sudoers)",
      "Write(/etc/**)",
      "Write(/usr/**)",
      "Write(/var/**)",
      "Write(/opt/**)",
      "Write(/bin/**)",
      "Write(/sbin/**)",
      "Write(/dev/**)",
      "Write(/etc/passwd)",
      "Write(/etc/sudoers)",
      "Edit(~/.ssh/id_*)",
      "Edit(~/.ssh/*_rsa)",
      "Edit(~/.ssh/*_ecdsa)",
      "Edit(~/.ssh/*_ed25519)",
      "Write(~/.ssh/id_*)",
      "Write(~/.ssh/*_rsa)",
      "Write(~/.ssh/*_ecdsa)",
      "Write(~/.ssh/*_ed25519)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Write(~/.zshrc)",
      "Write(~/.zprofile)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(.dev.vars)",
      "Read(.dev.vars.*)",
      "Write(.env*)",
      "Write(**/secrets/**)"
    ],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "{{ .chezmoi.homeDir }}/.config/claude/plans/"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|compact",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/claude/hooks/session-start.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto|manual",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/claude/hooks/pre-compact-save.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/claude/hooks/pre-tool-use-block-main.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/claude/hooks/pre-tool-use-block-merge.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "$HOME/.config/claude/hooks/pre-tool-use-block-forbidden-dirs.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/claude/hooks/post-tool-use-eol.ts",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Sosumi.aiff",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cat ~/.config/claude/hooks/golden-rules.txt 2>/dev/null || true; echo ''; (git -C \"$CLAUDE_PROJECT_DIR\" rev-parse --is-inside-work-tree >/dev/null 2>&1 && git -C \"$CLAUDE_PROJECT_DIR\" status --short) || true; echo '\n---\nCurrent time: '$(date '+%Y-%m-%d %H:%M:%S')",
            "timeout": 5
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "cat ~/.config/claude/hooks/workflow-instructions.md | jq -Rs '{hookSpecificOutput:{hookEventName:\"UserPromptSubmit\",additionalContext:.}}'",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You MUST respond with ONLY a JSON object, no other text.\n\nEvaluate if Claude should stop. Input: $ARGUMENTS\n\nCheck `last_assistant_message` to judge completion:\n\nRules:\n- If stop_hook_active is true: {\"ok\": true}\n- APPROVE if: last_assistant_message asks user a question, reports completion, or awaits input; all TODOs done\n- BLOCK only if: last_assistant_message shows mid-task work with clear next steps AND incomplete TODOs that AI can finish without user input\n\nDefault: approve.\n\nRespond ONLY with raw JSON: {\"ok\": true} or {\"ok\": false, \"reason\": \"日本語で継続理由\"}",
            "timeout": 30
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Submarine.aiff",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You MUST respond with ONLY a JSON object, no other text.\n\nEvaluate if subagent should stop. Input: $ARGUMENTS\n\nCheck `last_assistant_message` to judge completion:\n\nRules:\n- If stop_hook_active is true: {\"ok\": true}\n- APPROVE if: last_assistant_message contains completed result/report, ready to return to parent, or needs user input\n- BLOCK only if: last_assistant_message shows mid-task with clear next steps AND can complete independently without additional info\n\nDefault: approve.\n\nRespond ONLY with raw JSON: {\"ok\": true} or {\"ok\": false, \"reason\": \"日本語で継続理由\"}",
            "timeout": 30
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Blow.aiff",
            "timeout": 5
          }
        ]
      }
    ],
    "ConfigChange": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '⚙️ 設定ファイルが変更されました' >&2; afplay /System/Library/Sounds/Purr.aiff",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "{{ .chezmoi.homeDir }}/ghq/github.com/biosugar0/dotfiles/bin/cc-statusline.ts"
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "document-skills@anthropic-agent-skills": true,
    "frontend-design@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "obsidian@obsidian-skills": true
{{- range $privatePlugins }},
    "{{ . }}@{{ $privateName }}": true
{{- end }}
  },
  "extraKnownMarketplaces": {
    "local-plugins": {
      "source": {
        "source": "directory",
        "path": "{{ .chezmoi.homeDir }}/.config/claude/plugins"
      }
    },
    "obsidian-skills": {
      "source": {
        "source": "github",
        "repo": "kepano/obsidian-skills"
      }
    }
{{- if $privateRepo }},
    "{{ $privateName }}": {
      "source": {
        "source": "github",
        "repo": "{{ $privateRepo }}"
      }
    }
{{- end }}
  },
  "plansDirectory": "{{ .chezmoi.homeDir }}/.config/claude/plans",
  "cleanupPeriodDays": 90,
  "showTurnDuration": true,
  "spinnerVerbs": {"mode": "replace", "verbs": ["かたかた", "もくもく"]},
  "language": "Japanese",
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true
}
